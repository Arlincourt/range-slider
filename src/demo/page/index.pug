include ../blocks/rangeSlider/index.pug

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="icon" type="image/png" href="favicon.png" sizes="16x16")
    link(rel="mask-icon" href="favicon.svg" sizes="16x16")
    title Slider Plugin
  body 
    .container
      .range-slider-container
        +range-slider({step: 4, max: 2, min: -40, progress: "false", scale: "false"})
      .range-slider-container
        +range-slider({orientation: "VERTICAL", tips: "false"})
      .range-slider-container
        +range-slider({orientation: "HORIZONTAL", range: "false"})
          