{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./src",
    "lib": [
      "es2016",
      "dom"
    ],
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "target": "es2016",
    "experimentalDecorators": true,
  },
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "strict": true,
    /* Enable all strict type-checking options. */
    "noImplicitAny": true,
    /* Raise error on expressions and declarations with an implied 'any' type. */
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}